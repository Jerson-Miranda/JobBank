<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="?attr/colorSecondary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivLogo_item_job"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_business"
        app:civ_border_color="?attr/colorSecondary"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle_item_job"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/subtitle"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ibArchive_item_job"
        app:layout_constraintStart_toEndOf="@+id/ivLogo_item_job"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Python Development (remoto)" />

    <TextView
        android:id="@+id/tvBusiness_item_job"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_1"
        app:layout_constraintEnd_toStartOf="@+id/ibArchive_item_job"
        app:layout_constraintStart_toStartOf="@+id/tvTitle_item_job"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle_item_job"
        tools:text="Microsoft" />

    <TextView
        android:id="@+id/tvAddress_item_job"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/text_1"
        app:layout_constraintEnd_toStartOf="@+id/ibArchive_item_job"
        app:layout_constraintStart_toStartOf="@+id/tvTitle_item_job"
        app:layout_constraintTop_toBottomOf="@+id/tvBusiness_item_job"
        tools:text="Ciudad Juarez, Chihuahua, Mexico" />

    <TextView
        android:id="@+id/tvTime_item_job"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text_1"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/ibArchive_item_job"
        app:layout_constraintStart_toStartOf="@+id/tvTitle_item_job"
        app:layout_constraintTop_toBottomOf="@+id/tvAddress_item_job"
        tools:text="3 hours ago" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorOnSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTime_item_job"
        app:layout_constraintTop_toBottomOf="@+id/tvTime_item_job" />

    <ImageButton
        android:id="@+id/ibArchive_item_job"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_archive_false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>